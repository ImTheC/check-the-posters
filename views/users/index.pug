include ../partials/header.pug
include ../partials/nav.pug

block content
  div.container
    h1 #{title}
    a(href="/users/new") Create a new user
    table(class="striped")
      thead
        th ID
        th Name
        th Email
        th Edit User
        th Delete User
      tbody
        each user in users
          tr
            td #{user.id}
            td #{user.name}
            td #{user.email}
            td
              a(href="/users/" + user.id + "/edit") Edit
            td
              form(action="/users/" + user.id + "?_method=DELETE" method="POST")
                button.waves-effect.waves-light.btn.red(type="submit")
                  i.material-icons delete
      tfoot


include ../partials/materializeScript.pug
