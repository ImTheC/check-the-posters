header
	nav.color-primary
		div.nav-wrapper
			a(href="/"): img.left(src="/images/logo.png")
			a.right.button-collapse.hide-on-med-and-up(href='#', data-activates='mobile-menu', class="button-collapse")
				i.material-icons menu

			if currentUser
				ul.right.hide-on-small-only
					li: a(href="/posters/new") New Poster
					li: a(href="/users/" + currentUser.id) Account
					li: a(href="/auth/logout") Logout
					if currentUser.isadmin === true
						li: a(href="/users") Admin
			else
				ul.right.hide-on-small-only
					li: a(href="/auth/signup") Signup
					li: a(href="/auth/login") Login

				if currentUser
					ul#mobile-menu.side-nav
						li: a(href="/posters/new") New Poster
						li: a(href="/users/" + currentUser.id) Account
						li: a(href="/auth/logout") Logout
						if currentUser.isadmin === true
							li: a(href="/users") Admin
				else
					ul#mobile-menu.side-nav
						li: a(href="/auth/signup") Signup
						li: a(href="/auth/login") Login
